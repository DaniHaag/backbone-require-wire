{{#if total}}
<span class="todo-count">
  <span class="number">{{remaining}}</span>
  <span class="word">{{pluralise remaining "item"}}</span> left.
</span>
{{/if}}


{{#if done}}
  <span class="todo-clear">
    <a href="#">
      Clear <span class="number-done">{{done}}</span>
      completed <span class="word-done">{{pluralise done "item"}}</span>
    </a>
  </span>
{{/if}}
